import java.util.Scanner;
class Sample{
    public static void main(String args[]){
        Scanner s1=new Scanner(System.in);
        int n=s1.nextInt();
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                if(j==i){
                    System.out.print("0");
                }
                else{
                    System.out.print("x");
                }
            }
            System.out.println();
        }
    }
}
